= form_for @category , remote:true do |f|
  - if @category.errors.any?
    %ul
      - @category.errors.full_messages.each do |msg|
        %li.text-error= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description

  %hr
  .btn-group
    - if @current_user.id==session[:userid] or @current_user.admin
      %button.btn.btn-primary.btn-mini{type:"submit" , data:{remote:true}}
        %i.icon-edit.icon-white
        저장
              
    - if @current_user.admin
      %a.btn.btn-primary.btn-mini{href:"#{categories_url}",data:{remote:true}}
        %i.icon-list.icon-white
        목록
  
