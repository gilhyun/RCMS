%h3 Log in

-if flash[:alert]
  .alert.alert-error= flash[:alert]

= form_tag sessions_path  do
  .field
    = label_tag "ID"
    /= text_field_tag :userid, params[:userid]
    %input#userid{type:"text" , name:"userid"}

  .field  
    = label_tag :password
    = password_field_tag :password
  
  = submit_tag "LOGIN" , class:"btn btn-primary"


:javascript
  $(function(){
    $("#userid").focus();
  })