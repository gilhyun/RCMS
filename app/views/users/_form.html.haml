= form_for @user , remote:true do |f|
  - if @user.errors.any?
    %ul
      - @user.errors.full_messages.each do |msg|
        %li.text-error= msg

  .field
    = f.label :userid
    = f.text_field :userid
  .field
    = f.label :email
    = f.text_field :email

  - if @current_user and @current_user.admin
    .field
      = f.label :admin
      = f.check_box :admin
  
  .field
    = f.label :password
    = f.password_field :password

  %hr
  - if @user.id==session[:userid] or @current_user.admin
    .btn-group
      %button.btn.btn-primary.btn-mini{type:"submit" , data:{remote:true}}
        %i.icon-edit.icon-white
        저장
            
  - if @current_user.admin
    .btn-group
      %a.btn.btn-primary.btn-mini{href:"#{users_url}",data:{remote:true}}
        %i.icon-list.icon-white
        목록

  
